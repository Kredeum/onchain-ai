{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    ".envrc"
  ],
  "envMode": "strict",
  "ui": "stream",
  "tasks": {
    "format": {
      "inputs": [
        "src/**"
      ],
      "outputLogs": "new-only"
    },
    "check": {
      "dependsOn": [
        "format"
      ],
      "outputLogs": "new-only"
    },
    "build": {
      "dependsOn": [
        "check"
      ],
      "outputLogs": "new-only"
    },
    "test": {
      "dependsOn": [
        "build"
      ],
      "cache": false,
      "outputLogs": "new-only"
    }
  }
}